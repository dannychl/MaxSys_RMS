@model IEnumerable<RecruitmentManagementSystem__Danny_.Models.Home>

@{
    ViewBag.Title = "RMS";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<table style="border:hidden; width:100%">
    <td style="border:hidden">
        <h2>Recruitment Management System</h2>
    </td>
    <td style="border:hidden">
        <div class="col-sm-12">
            <div class="form-inline pull-right">
                <label>Search</label>
                <input type="text" class="form-control" id="txtSearch" />
            </div>
        </div>
    </td>
    <td style="border:hidden">
        <h4>@Html.ActionLink("Create New", "Create")</h4>
    </td>
</table>

<div id="gridSearch"></div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
        $(".LinkButton").on("click", function () {
            return confirm("Do you want to confirm your selection?");
        });
        @*$('dosubmit').click(function (e) {
            return confirm("Do you want to submit?");
        }*@

    $(() => {
        getUsers();

        $('#txtSearch').on('keyup', () => {
            getUsers();
        });
    });

    function getUsers() {
        $.ajax({
            url: '@Url.Action("SearchUsers","Candidates")',
            datatype: 'html',
            method: 'GET',
            data: { searchText: $('#txtSearch').val()},
            success: function (res) {
                $('#gridSearch').html('').html(res);
            },
            error: function (err) {
                console.log(err);
            }
        })
    }
</script>
