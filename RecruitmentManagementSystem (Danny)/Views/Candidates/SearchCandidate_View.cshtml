@model IEnumerable<RecruitmentManagementSystem__Danny_.Models.Candidate>

@{
    ViewBag.Title = "RMS";
}

<style>
    table, th, td {
        border: 2px solid black;
    }

    .fontView {
        padding: inherit;
        text-align: center;
        color: white;
        background-color: black;
        resize: both;
        background-size: 5px;
        font-weight: bold;
        font-family: Verdana;
    }
    .fontViewWhite {
        padding: inherit;
        resize: both;
        color: black;
        font-weight: bold;
        font-family: Verdana;
    }
    .fontViewAction {
        padding: inherit;
        font-size: 14px;
        font-weight: bold;
        font-family: Verdana;
    }
</style>

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
        <th>
            <div class="fontView">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </th>
        <th>
            <div class="fontView">
                @Html.DisplayNameFor(model => model.Position)
            </div>
        </th>
        <th style="width:250px">
        </th>
    </tr>

    @if (Model.Count() == 0)
    {
        <td colspan="5" style="font-size:20px; text-align:center; font-weight:bold">No data found</td>
    }

    @foreach (var item in Model)
    {
        <tr align="center">
            <td>
                <div class="fontViewWhite" style=" font-size: 15px;">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
            </td>
            <td>
                <div class="fontViewWhite" style="font-size: 16px; background-color: lightgrey; ">
                    @Html.DisplayFor(modelItem => item.Position)
                </div>
            </td>
            <td>
                <div class="fontViewAction">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@style = "color:green" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new {@style = "color:darkblue" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "LinkButton", @style = "color:red" })
                </div>
            </td>
        </tr>
    }

</table>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
        $(".LinkButton").on("click", function () {
            return confirm("Do you want to confirm your selection?");
        });
        @*$('dosubmit').click(function (e) {
            return confirm("Do you want to submit?");
        }*@
</script>
