    int candidateId = ViewBag.intervieweeId;
    <div style="border:hidden; float:right">
        <h4 style="font-family: 'Clarendon BT'; font-size: 16px;">@Html.ActionLink("Display Candidate Details 🔍", "Details/" + candidateId, "Candidates")</h4>
