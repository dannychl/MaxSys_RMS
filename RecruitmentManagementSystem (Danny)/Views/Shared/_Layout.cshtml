<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recruitment Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
        @if (Session["Username"] != null)
        {
            ViewBag.username = "Welcome " + Session["Username"] +" (" + Session["Roles"]+")";
        }
        else
        {
            ViewBag.username = null;
        }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @if (ViewBag.username != null)
                {
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Recruitment", "Index", "Candidates", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                @if (ViewBag.username != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("All candidates", "Index", "ShowAllCandidates")</li>
                        <li>@Html.ActionLink("Interview Management", "Index", "Interview")</li>
                    </ul>
                }
                <ul class="nav navbar-nav navbar-right">
                    <li style="color:darkgrey; padding-top:14px; font-size:15px">@ViewBag.username</li>
                    @if (ViewBag.username != null)
                    {
                        <li>@Html.ActionLink("Logout", "Index", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MaxSys - RMS Demo </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
