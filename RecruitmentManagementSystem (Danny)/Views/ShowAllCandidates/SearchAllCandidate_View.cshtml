@model IEnumerable<RecruitmentManagementSystem__Danny_.Models.Home>

@{
    ViewBag.Title = "Show All Candidates";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>


<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
        <th>
            <div style="padding: inherit; text-align: center; color: white; background-color: black; resize: both; background-size: 5px; font-weight: bold; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif ">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </th>
        <th>
            <div style="padding: inherit; text-align: center; color: white; background-color: black; resize: both; background-size: 5px; font-weight: bold; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif ">
                @Html.DisplayNameFor(model => model.Position)
                </div>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Age)
            </th>*@
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <td colspan="5" style="font-size:20px; text-align:center; font-weight:bold">No data found</td>
    }

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
            <td style="font-size: 16px;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>*@
            <td style="font-size:16px;">
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td  align="center">
                <div style="font-size:10px; resize: both; font-weight:bold; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif ">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "color:darkgrey font-weight:bold; font-size: 15px" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @style = "color:darkblue; font-weight:bold; font-size: 15px" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "LinkButton", @style = "color:red; font-weight:bold; font-size: 15px" })
                </div>
            </td>
        </tr>
            }

</table>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
        $(".LinkButton").on("click", function () {
            return confirm("Do you want to confirm your selection?");
        });
        @*$('dosubmit').click(function (e) {
            return confirm("Do you want to submit?");
        }*@
</script>
